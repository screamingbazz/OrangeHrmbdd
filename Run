        features = ".//Features/LoginFeature.feature", // path to your feature file
        glue = "StepDefinitions",                       // match your package name
        dryRun = false,
        monochrome = true,
        plugin = {"pretty", "html:target/cucumber-reports.html"} // generates HTML report
)
public class Run {
}
